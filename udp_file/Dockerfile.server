# Dockerfile.server

# 1. Use the lightweight official Python image
FROM python:3.9-slim

# 2. Set the working directory
WORKDIR /app

# 3. Copy the server program into the container
COPY udp_server.py .

# 4. Command to run when the container starts
# The -u option makes print output unbuffered so it appears in real time
CMD ["python", "-u", "udp_server.py"]